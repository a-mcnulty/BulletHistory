{
  "manifest_version": 3,
  "name": "Bullet History",
  "version": "1.0.0",
  "description": "Visual bullet journal for browsing history",
  "permissions": [
    "history",
    "browsingData",
    "storage",
    "bookmarks",
    "sidePanel",
    "sessions"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Bullet History"
  },
  "background": {
    "service_worker": "background.js"
  }
}
